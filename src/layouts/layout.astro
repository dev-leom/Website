---
import { ViewTransitions, fade } from "astro:transitions";
import "../styles/styles.css";
import Nav from "../components/Nav";
import SubscribeForm from "../components/SubscribeForm";
const { pathname } = Astro.url;
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <ViewTransitions />
    </head>
    <body
        class="bg-theme-base text-theme-900"
        transition:animate={fade({ duration: "0.3" })}
    >
        <Nav transition:animate="none" client:only />
        <div transition:animate="slide">
            <slot />
        </div>
        <p>{pathname}</p>
        <h1 class="text-2xl font-bold">Abonnement Ã  la mailing list</h1>
        <SubscribeForm client:visible data-astro-reload />
    </body>
</html>
